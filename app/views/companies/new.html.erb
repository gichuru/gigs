<div class="container">
	<h4 class ="center">Work Experience</h4>
    <div class="col-sm-8">
			<%= form_for @company do |f| %>
    	<div class= "row"> 
            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Company %>
                    <%= f.text_field :cname, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
                <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Industry %>
                    <%= f.text_field :industry, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>

            <div class="col-sm-5">
                <div class="form-group">
                    <%= f.label :website %>
                    <%= f.text_field :website, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Location %>
                    <%= f.text_field :location, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
             <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :About_us %>
                    <%= f.text_area :description, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>


    		
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                 <%= f.submit "Add + ", class: "btn btn-secondary btn-block" %>
                </div>
            </div>

	</div>
		<% end %>

</div><!-- /.col-* -->
