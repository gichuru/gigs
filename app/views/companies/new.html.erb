<div class="container">
	<h4 class ="center">Wiork Experience</h4>
     <p class ="center"> Your bio data >> Education  >> <b>Work Experience</b>  >> Skills/Hobbies  >> Referees </p>
    <div class="col-sm-8">
			<%= form_for @company do |f| %>
    	<div class= "row"> 
            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Company %>
                    <%= f.text_field :cname, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>

            <div class="col-sm-5">
                <div class="form-group">
                    <%= f.label :website %>
                    <%= f.text_field :website, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Location %>
                    <%= f.text_field :address, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>

            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Industry %>
                    <%= f.text_field :category, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
                <hr>
            </div>
            

            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :your_role %>
                    <%= f.text_field :role, class: "form-control input-lg" %>
                    <small class="healer block"> Only verified employers can see this</small>
                </div><!-- /.form-group -->
            </div>

    		<div class="col-sm-10">
    			<div class="form-group">
    				<%= f.label :description %>
    				<%= f.text_area :description, class: "form-control" %>
    				<small class="healer block"> About yourself, start with "I'm a.. " </small>
    			</div><!-- /.form-group -->
    		</div>
    		
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                 <%= f.submit "Add + ", class: "btn btn-secondary btn-block" %>
                </div>
            </div>
    		<div class="col-sm-5">
	  			<div class="form-group">
	              <%= link_to "Click to see your CV ", profiles_path, class: "btn btn-secondary btn-block" %>
	            </div>
        	</div>
	</div>
		<% end %>

</div><!-- /.col-* -->
