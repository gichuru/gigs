            <div class="container">
    <div class="resume">
    <div class="resume-main">
        <div class="resume-main-image">

        </div><!-- /.resume-main-image -->

        <div class="resume-main-content">
            <h2><%= @resume.fname %><%= @resume.lname %>
                <!-- <span class="resume-main-verified">v<i class="fa fa-check"></i></span> -->
            </h2>

            <h3><%= @resume.category %></h3><br>
            <small class="resume-main-contacts">
                 Phone <%= @resume.phone %> | Email: <%= current_user.email %> | From: <%= @resume.address %>
            </small><br>
            <span class="companies-list-item-rating-count"><%= link_to "Delete this resume", @resume, method: :delete, data: { confirm: 'Are you sure? this will destory the resume completely' } %></span> 
