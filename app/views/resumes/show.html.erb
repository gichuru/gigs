            </div>  --><!-- /.resume-main-actions -->
        </div><!-- /.resume-main-content -->
    </div><!-- /.resume-main -->

    <div class="resume-chapter">
        <div class="resume-chapter-inner">
            <div class="resume-chapter-title">
                <h2>Summary</h2>
            </div><!-- /.resume-chapter-title -->

            <div class="resume-chapter-content">
                <p>
                    <%= @resume.bio %>
                </p>

            </div><!-- /.resume-chapter-content -->
        </div><!-- /.resume-chapter-inner -->
    </div><!-- /.resume-chapter -->
    <div class="resume-chapter">
        <div class="resume-chapter-inner">
            <div class="resume-chapter-content">
                <h2 class="mb40">Experience: <span> 
                    <%= link_to "Add",  new_resume_job_path(@resume), class: "btn btn-secondary" %></span></h2>

                <dl>
                    <% @jobs.each do |job| %>

                    <dt><%= job.sdate.strftime ("%Y") %> - <%= job.edate.strftime ("%Y") %> </dt>
                    <dd>
                        <Strong><%= job.cname %></Strong><br>
                        <i class="small"><%= job.role %></i>
                        <p><%= job.description %></p>
                    </dd>
                    <% end %>      
                </dl>
            </div><!-- /.resume-chapter-content -->
        </div><!-- /.resume-chapter-inner -->
    </div><!-- /.resume-chapter -->
    <div class="resume-chapter">
        <div class="resume-chapter-inner">
            <div class="resume-chapter-content">
                <h2 class="mb40">Education: <span> <%= link_to "Add",  new_resume_edu_path(@resume), class: "btn btn-secondary" %></span></h2>

                <dl>
                    <% @edus.each do |edu| %>

                    <dt><%= edu.sdate.strftime ("%Y") %> - <%= edu.edate.strftime ("%Y") %> </dt>
                    <dd>
                        <Strong><%= edu.sname %></Strong><br>
                        <i class="small"><%= edu.course %></i>
                        <p><%= edu.description %></p>
                    </dd>
                    <% end %>      
                </dl>
            </div><!-- /.resume-chapter-content -->
        </div><!-- /.resume-chapter-inner -->
    </div><!-- /.resume-chapter -->
