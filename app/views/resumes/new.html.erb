<div class="container">
        <div class="col-sm-12">
	       <h4 class ="center">Create Your Resume</h4>
        </div>
    <div class="col-sm-8">
			<%= form_for @resume do |f| %>
    	<div class= "row">
            
    		<div class="col-sm-5">
    			<div class="form-group">
    				<%= f.label :age %><span> Date of birth</span>
    				<%= f.date_field :age, max: Date.today - 5475, autofocus: true, class: "form-control input-lg" %>
    			</div><!-- /.form-group -->
    		</div> 
    		<div class="col-sm-5">
    			<div class="form-group">
    				<%= f.label :phone %><span> Active Mobile number</span>
    				<%= f.text_field :phone, class: "form-control input-lg" %>
    			</div><!-- /.form-group -->
    		</div>
            <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :Address %><span> Where do you live currently</span>
                    <%= f.text_field :address, autofocus: true, class: "form-control input-lg" %>
                </div><!-- /.form-group -->
            </div>

             <div class="col-sm-10">
                <div class="form-group">
                    <%= f.label :category %> <span> Business Category you're interested in</span>
                    <%= f.text_field :category, autofocus: true, class: "form-control input-lg" %>
                </div><!-- /.form-group -->
            </div>
    		<div class="col-sm-10">
    			<div class="form-group">
    				<%= f.label :bio %><span> Your bio, Be conscise (280 xters)</span>
    				<%= f.text_area :bio, class: "form-control" %>
    			</div><!-- /.form-group -->
    		</div>

    		
            </div>
    		<div class="col-sm-3">
	  			<div class="form-group">
	             <%= f.submit "Next", class: "btn btn-secondary btn-block" %>
	            </div>
        	</div>
	</div>
		<% end %>

    <div class="col-sm-4">
        <div class="widget">
            <h2>Tips :</h2>
            <ul class="nav">
                <li><span>1.</span> Enter full names </li>
                <li><span>2.</span> Date of birth (calculates age)</li>
                <li><span>3.</span> Phone (hidden to the public)</li>
            </ul>
        </div><!-- /.widget --> 
        <div class="widget">
            <h2>Your Bio</h2>
            <p>Start your bio with "I'm a student at ABC School and I am looking for internship in (category), I'm hardworking etc" </p>

        </div><!-- /.widget -->   
    </div><!-- /.col-* -->

</div><!-- /.col-* -->