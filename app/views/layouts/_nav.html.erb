<div class="page-wrapper">
<div class="header-wrapper">
    <div class="header">
        <div class="header-top">
            <div class="container">
                <div class="header-brand">
                    <div class="header-logo">
               
                            <i class="profession profession-logo"></i>
                            <span class="header-logo-text"><%= link_to "In", root_path %> <span class="header-logo-highlight">:</span><%= link_to "Postme", root_path %></span>
                    </div><!-- /.header-logo-->

                    <div class="header-slogan">
                        <span class="header-slogan-slash">/</span>
                        <span class="header-slogan-text">Attachment job Portal </span>
                    </div><!-- /.header-slogan-->
                </div><!-- /.header-brand -->

                <ul class="header-actions nav nav-pills">
                   <li><%= link_to "Create a company &raquo".html_safe, new_company_path, class: "primary" %>
